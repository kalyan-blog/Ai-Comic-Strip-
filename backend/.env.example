# ============================================
# TEXPERIA 2026 Backend - Environment Variables
# Copy this file to .env and fill in real values
# ============================================

# Database (PostgreSQL for production, SQLite for local dev)
# Render/Supabase will provide this URL
DATABASE_URL=sqlite:///./comic_challenge.db
# DATABASE_URL=postgresql://user:password@host:5432/database_name

# JWT Secret Key (use a strong random string in production)
SECRET_KEY=your-super-secret-key-change-in-production

# CORS - Allowed frontend origins (comma-separated for multiple)
CORS_ORIGINS=https://your-app.vercel.app
FRONTEND_URL=https://your-app.vercel.app
PRODUCTION_URL=https://your-app.vercel.app

# SMTP Email Configuration (Gmail App Password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Paytm Payment Gateway
PAYTM_MERCHANT_ID=YOUR_MERCHANT_ID
PAYTM_MERCHANT_KEY=YOUR_MERCHANT_KEY
PAYTM_WEBSITE=WEBSTAGING
PAYTM_INDUSTRY_TYPE_ID=Retail
PAYTM_CALLBACK_URL=https://your-backend.onrender.com/api/payments/callback

# Server Configuration
PORT=8000
DEBUG=false
PORT=8000
DEBUG=false
